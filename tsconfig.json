{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",
    "module": "CommonJS",
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "*": ["*"]
    },
    "removeComments": true,
    "incremental": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
